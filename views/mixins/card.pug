mixin thumbCard(job)
  .col-md-4
    .card.mb-4.shadow-sm(style='background-color:#a7ff83;')
      .card-body
        .card-text Title: #{job.title}
        .card-text Criteria: #{job.status}
        .card-text Description: #{job.body}
        .card-text.mb-4 #{job.city}
        .d-flex.justify-content-between.align-items-center
          a.btn.btn-sm.btn-primary.apply(href=`/jobs/${job._id}`) Details

          small.text-muted *
