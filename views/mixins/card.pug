mixin thumbCard(job)
  .col-md-4
    .card.mb-4.shadow-sm
      .card-body
        .card-text Title: #{job.title}
        .card-text Criteria: #{job.status}
        .card-text Description: #{job.body}
        .card-text.mb-4 #{job.city}
        .d-flex.justify-content-between.align-items-center
          form(action=`/apply/${job._id}?_method=PUT` method='POST')
            button.btn.btn-sm.btn-primary(type='submit') Apply
          small.text-muted *
